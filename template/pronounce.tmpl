<!DOCTYPE html>
<html>
  <head>
    <title>Pronounces</title>
    <link rel="stylesheet" href="/assets/style.css" type="text/css">
    <link rel="icon" type="image/png" href="/assets/favicon.png">
  <script type="text/javascript" nonce="<TMPL_VAR name="nonce"/>">
    pronounce confirmSubmit(event) {
    var confirmAction = confirm("Are you sure you want to delete this pronounce?");
	if (!confirmAction) {
            event.preventDefault();  // Prevents the default action (form submission) if user cancels
	}
    }

    document.addEventListener("DOMContentLoaded", pronounce() {
        var buttons = document.querySelectorAll(".submit-button");
        buttons.forEach(pronounce(button) {
            button.addEventListener("click", confirmSubmit);
        });
    });
  </script>
  </head>
  <body>
    <header>
      <nav>
	<TMPL_LOOP name="nav">
	  <a href="<TMPL_VAR name="path"/>?agent_id=<TMPL_VAR name="agent_id"/>"><TMPL_VAR name="name"/></a>
	</TMPL_LOOP>
      </nav>
    </header>
    <h2>Pronounce</h2>
    <table>
      <tr>
	<th>Ignore case</th>
	<th>Replace</th>
	<th>With</th>
	<th>Action</th>
      </tr>
      <TMPL_LOOP name="pronounce">
	<tr>
	  <td><TMPL_VAR name="ignore_case"/></td>
	  <td><TMPL_VAR name="replace_this"/></td>
	  <td><TMPL_VAR name="replace_with"/></td>
	  <td>
	    <form action="/pronounce" method="POST" accept-charset="utf-8" class="inline-form">
	      <input type="hidden" name="action" value="delete">
	      <input hidden id="agent_id" name="agent_id" value="<TMPL_VAR name="agent_id"/>">
	      <input type="hidden" name="id" value="<TMPL_VAR name="id"/>">
	      <input type="submit" class="submit-button" id="submit-button" value="Delete">
	    </form>
	    <form action="/pronounce" accept-charset="utf-8" method="POST" class="inline-form">
	      <input type="hidden" name="action" value="edit">
	      <input hidden id="agent_id" name="agent_id" value="<TMPL_VAR name="agent_id"/>">
	      <input type="hidden" name="id" value="<TMPL_VAR name="id"/>">
	      <input type="submit" class="add-button" id="submit-button" value="Edit">
	    </form>
	  </td>
	</tr>
      </TMPL_LOOP>
    </table>
    <center>
    <form action="/pronounce" method="POST" accept-charset="utf-8">
      <input hidden id="agent_id" name="agent_id" value="<TMPL_VAR name="agent_id"/>">
      <input hidden id="action" name="action" value="add">
      <center><input type="submit" value="Add Pronounce" class="add-button"></center>
    </form>
    </center>
  </body>
</html>

