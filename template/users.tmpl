<!DOCTYPE html>
<html>
  <head>
    <title>Users</title>
    <link rel="stylesheet" href="/assets/style.css" type="text/css">
    <link rel="icon" type="image/png" href="/assets/favicon.png">
  <script type="text/javascript" nonce="<TMPL_VAR name="nonce"/>">
    function confirmSubmit(event) {
    var confirmAction = confirm("Are you sure you want to delete this context?");
	if (!confirmAction) {
            event.preventDefault();  // Prevents the default action (form submission) if user cancels
	}
    }

    document.addEventListener("DOMContentLoaded", function() {
        var buttons = document.querySelectorAll(".submit-button");
        buttons.forEach(function(button) {
            button.addEventListener("click", confirmSubmit);
        });
    });
  </script>
  </head>
  <body>
    <header>
      <nav>
	<TMPL_LOOP name="nav">
	  <a href="<TMPL_VAR name="path"/>"><TMPL_VAR name="name"/></a>
	</TMPL_LOOP>
      </nav>
    </header>
    <h2>Users</h2>
    <table>
      <tr>
	<th>Username</th>
	<th>Firstname</th>
	<th>Lastname</th>
	<th>Admin</th>
	<th>Action</th>
      </tr>
      <TMPL_LOOP name="users">
	<tr>
	  <td><TMPL_VAR name="username"/></td>
	  <td><TMPL_VAR name="first_name"/></td>
	  <td><TMPL_VAR name="last_name"/></td>
	  <td><TMPL_VAR name="is_admin"/></td>
	  <td>
	    <form action="/users" method="POST" accept-charset="utf-8" class="inline-form">
	      <input type="hidden" name="action" value="delete">
	      <input type="hidden" name="id" value="<TMPL_VAR name="id"/>">
	      <input type="submit" class="submit-button" id="submit-button" value="Delete">
	    </form>
	    <form action="/users" method="POST" accept-charset="utf-8" class="inline-form">
	      <input type="hidden" name="action" value="edit">
	      <input type="hidden" name="id" value="<TMPL_VAR name="id"/>">
	      <input type="submit" class="add-button" id="submit-button" value="Edit">
	    </form>
	  </td>
	</tr>
      </TMPL_LOOP>
    </table>
    </center>
    <form action="/users" method="POST" accept-charset="utf-8">
      <input hidden id="action" name="action" value="add">
      <center><input type="submit" value="Add User" class="add-button"></center>
    </form>
    </center>
  </body>
</html>

